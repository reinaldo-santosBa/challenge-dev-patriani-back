{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@routes": [
        "routes"
      ],
      "@controllers": [
        "controllers"
      ],
      "@middlewares": [
        "middlewares"
      ],
      "@utils": [
        "utils"
      ],
      "@service": [
        "domain/service"
      ],
      "@models": [
        "domain/models"
      ],
      "@repositories": [
        "domain/repositories"
      ],
      "@errors": [
        "errors"
      ],
      "@config": [
        "config"
      ]
     }
  },
}